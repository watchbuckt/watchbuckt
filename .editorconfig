root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{py, js, ts, go, bash}]
charset = utf-8
max_line_length = 80

[*.{py, go, bash, rs}]
indent_style = tab
indent_size = 4

[*.{md,mdx}]
trim_trailing_whitespace = false
